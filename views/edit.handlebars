<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <form action="/ideas/{{_id}}?_method=put" method="post">
            <div class="card p-3">
                <h3 class="">Edit idea</h3>
                <form action="/ideas" method="post">
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input type="text" name="title" id="title" class="form-control" value="{{idea.title}}">
                    </div>
                    <div class="form-group">
                        <label for="details">Details</label>
                        <textarea name="details" id="details" cols="20" rows="5" class="form-control">{{idea.details}}</textarea>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-outline-success">Create</button>
                    </div>
                    <a href="/ideas" class="text-dark"><i class="fa fa-chevron-left"></i> Back to Ideas</a>
                </form>
            </div>
        </form>
    </div>
</div>